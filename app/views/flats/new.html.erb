<div class="container">
  <div class="row">
    <h1 class ="text-center">Créer mon annonce</h1>
    <div class="col-md-6 col-md-offset-3">
      <%= simple_form_for(@flat) do |f| %>
        <%= f.input :city, class: 'form-control', label: 'Ville' %>
        <%= f.input :address, class: 'form-control', label: 'N° et nom de rue'%>
        <%= f.input :available_from, as: :date, html5: true, class: 'form-control', label: 'Disponible à partir de :'%>
        <%= f.input :flat_surface, as: :integer, min: 0, class: 'form-control', label: 'Surface totale'%>
        <%= f.input :room_surface, as: :integer, class: "form-control", min: 0, label: 'Surface de la chambre à louer'%>
        <%= f.input :number_of_rooms, as: :integer, min: 0, class: 'form-control', label: 'Nombre de chambres'%>
        <%= f.input :number_of_roommates, as: :integer, min: 0, class: 'form-control', label: 'Nombre de colocataires'%>
        <%= f.input :description, as: :text, class: 'form-control'%>
        <%= f.input :photo %>
        <%= f.input :rent, as: :integer, min: 0, class: 'form-control'%>
        <%= f.hidden_field :user_id, :value => 1%>
        <%= f.submit "Créer", class: 'btn btn-primary col-md-6 col-md-offset-3 text-center'%> </p>
      <% end %>
    </div>
  </div>
</div>
