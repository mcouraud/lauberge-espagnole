<div class="container">

  <div class="row">

    <h1> Colocation de <%= @flat.number_of_roommates%> personnes | <%= @flat.flat_surface %> m² </h1>
<div class="col-xs-6 p-20">
  <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators">
      <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
      <li data-target="#carousel-example-generic" data-slide-to="1"></li>
      <li data-target="#carousel-example-generic" data-slide-to="2"></li>
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner">
      <div class="item active">
       <%= cl_image_tag ("#{@flat.photo}") %>
      </div>
      <div class="item">
        <img src="https://lcdcfrance-prod.s3.amazonaws.com/pictures/56e29bda1d3e2e9bb9bb450bcb5d9a8e_medium.jpg" alt="colocation photo 2">
      </div>
      <div class="item">
        <img src="https://lcdcfrance-prod.s3.amazonaws.com/pictures/1a8dd15993442024ccc275fb07eff099_medium.jpg" alt="colocation photo 3">

      </div>
    </div>

    <!-- Controls -->
    <a class="left carousel-control" href="#carousel-example-generic" data-slide="prev">
      <span class="glyphicon glyphicon-chevron-left"></span>
    </a>
    <a class="right carousel-control" href="#carousel-example-generic" data-slide="next">
      <span class="glyphicon glyphicon-chevron-right"></span>
    </a>
  </div>
</div>


<br>
    <div class="col-xs-6">

      <h2> Détails </h2>
      <ul>
        <li> Adresse : <%= @flat.address %> </li>
        <li> Nombre de chambres : <%= @flat.number_of_rooms %> </li>
        <li> Loyer: <%= @flat.rent %>€ / mois </li>
        <li> Disponible à partir du <%= @flat.available_from %></li>
      </ul>
      <% if !@flat.description.nil? %>
        <h2> Description </h2>
        <p> <%= @flat.description %> </p>
      <% end %>
      <% if @flat.user == current_user %>
         <p> <%=  link_to "Modifier l'annonce", edit_flat_path(@flat)  %> | <%=  link_to "Supprimer l'annonce", flat_path(@flat),
    method: :delete, data: { confirm: "Are you sure?" }  %> </p>
      <% end %>
    </div>

    <div class="col-xs-6">
    <h2> Visiter cette colocation </h2>

    <%= form_for [@flat, @visit] do |f| %>
    <label>Date de visite</label><br>
    <p> <%= f.date_field :date%> </p>
    <label>Heure de visite</label><br>
    <p> <%= f.time_select :time %> </p>
    <p> <%= f.check_box :skype %> Visite Skype </p>
    <p> <%= f.submit "Réserver une visite"%> </p>
    <% end %>



    <% if flash[:notice] %>
    <div class="notice"> <%= flash[:notice] %> </div>
    <% end %>
    </div>
  </div>

  <br>
  <%=  link_to "↩︎ Revenir aux résultats", controller: "flats", city: @flat.city  %>

</div>
