<div class="container">
  <!-- Titre du détail de l'appart -->
  <div class="row">
    <div class=".col-12 show-title">
    <h1 class=""> Colocation de <%= @flat.number_of_roommates%> personnes | <%= @flat.flat_surface %> m² </h1>
    </div>

<!-- Carousel photos  -->
    <div class="col-xs-12 col-sm-6 p-20 carousel">
      <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators">
          <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
          <li data-target="#carousel-example-generic" data-slide-to="1"></li>
          <li data-target="#carousel-example-generic" data-slide-to="2"></li>
        </ol>
        <!-- Wrapper for slides -->
        <div class="carousel-inner">
          <div class="item active">
            <img src="https://lcdcfrance-prod.s3.amazonaws.com/pictures/a59ad7ddc4f3b443ecc8e796e0d50342_medium.jpg" alt="colocation photo 1">
          </div>
          <div class="item">
            <img src="https://lcdcfrance-prod.s3.amazonaws.com/pictures/56e29bda1d3e2e9bb9bb450bcb5d9a8e_medium.jpg" alt="colocation photo 2">
          </div>
          <div class="item">
            <img src="https://lcdcfrance-prod.s3.amazonaws.com/pictures/1a8dd15993442024ccc275fb07eff099_medium.jpg" alt="colocation photo 3">
          </div>
        </div>
        <!-- Controls -->
        <a class="left carousel-control" href="#carousel-example-generic" data-slide="prev">
          <span class="glyphicon glyphicon-chevron-left"></span>
        </a>
        <a class="right carousel-control" href="#carousel-example-generic" data-slide="next">
          <span class="glyphicon glyphicon-chevron-right"></span>
        </a>
      </div>
    </div>

    <!-- Détails de l'appart.   -->
    <div class="col-xs-12 col-sm-6">
      <h2> Détails de l'appartement : </h2>
      <ul class="apt-desc">
        <li> Adresse : <%= @flat.address %> </li>
        <li> Nombre de chambres : <%= @flat.number_of_rooms %> </li>
        <li> Loyer : <strong> <%= @flat.rent %>€/mois</strong> </li>
        <li> Disponible à partir du : <%= @flat.available_from %></li>
      </ul>
      <% if !@flat.description.nil? %>
      <h2> Description </h2>
      <p> <%= @flat.description %> </p>
      <% end %>
      <% if @flat.user == current_user %>
      <p> <%=  link_to "Modifier l'annonce", edit_flat_path(@flat)  %> | <%=  link_to "Supprimer l'annonce", flat_path(@flat),
      method: :delete, data: { confirm: "Are you sure?" }  %> </p>
      <% end %>
    </div>

    <!-- Form pour la visite de l'appart.  -->
    <div class="col-xs-4">
      <h2> Visiter la colocation :</h2>
      <div class="visit-form">
      <%= form_for [@flat, @visit] do |f| %>
      <label>Date de visite</label><br>
      <p> <%= f.date_field :date, class: "form-control" %> </p>
      <label>Heure de visite</label><br>
      <p> <%= f.time_select :time, class: "form-control" %> </p>
      <p> <%= f.check_box :skype, class: "form-check-input"%> Visite Skype </p>
      <p> <%= f.submit "Réserver une visite", class: 'btn btn-primary'%> </p>
      <% end %>
      <% if flash[:notice] %>
      <div class="notice"> <%= flash[:notice] %> </div>
      <% end %>
      </div>
    </div>
  </div>
  <br>
  <%=  link_to "↩︎ Revenir aux résultats", controller: "flats", city: @flat.city  %>
</div>
