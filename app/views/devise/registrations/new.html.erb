<div class="container">
    <h2>Créer un compte</h2>

    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= f.error_notification %>

    <div class="form-inputs container">
      <p> <%= f.input :firstname, label: "Prénom",
                  required: true,
                  autofocus: true %></p>
      <p> <%= f.input :lastname, label: "Nom",
                  required: true,
                  autofocus: true %></p>
      <p><%= f.input :email, label: "Email",
                  required: true,
                  autofocus: true ,
                  input_html: { autocomplete: "email" }%></p>
      <p> <%= f.input :password, label: "Mot de passe",
                  required: true,
                  hint: ("#{@minimum_password_length} caractères minimum" if @minimum_password_length),
                  input_html: { autocomplete: "Password" } %> </p>
      <p> <%= f.input :password_confirmation,label: "Confirmez votre mot de passe",
                  required: true,
                  input_html: { autocomplete: "Password" } %> </p>
    </div>

    <div class="form-actions container">
      <%= f.button :submit, "Sign up" %>

      <br>
      <%= render "devise/shared/links" %>
      <% end %>
  </div>
</div>



